<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ROAL" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_principal</item>
        <item name="colorPrimaryVariant">@color/orange_principal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_gray_icons</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.ROAL">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="titulosGeneral" parent="Theme.ROAL">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
    </style>

    <style name="subtitulosGeneral" parent="Theme.ROAL">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
    </style>

    <style name="titulosNavbar" parent="Theme.ROAL">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
    </style>

    <style name="botonesGeneral" parent="Theme.ROAL">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mulish_black</item>
    </style>

    <style name="textNumbersVerification" parent="Theme.ROAL">
        <item name="android:textSize">35sp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/orange_principal</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="hintTextColor">@color/orange_principal</item>
    </style>

    <style name="InputTextEditTextStyleRegular">
        <item name="android:textColor">#222222</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#c5c5c5</item>
        <item name="colorControlHighlight">#c5c5c5</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

</resources>